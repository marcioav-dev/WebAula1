@model WebAula1.Models.Person
@{
}

<h2>Atualizar Cadastro</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Atualizar">
            <input type="hidden" asp-for="PersonId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nome</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Endereço</label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BirthYear" class="control-label">Ano de Nascimento</label>
                <input asp-for="BirthYear" class="form-control" />
            </div>

            <input type="submit" value="Atualizar" class="btn btn-info" />
        </form>
    </div>

    <a asp-action="Index" class="btn btn-link">Voltar</a>
</div>