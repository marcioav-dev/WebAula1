@model IEnumerable<WebAula1.Models.Person>

@{ 
    ViewData["Title"] = "Exibir Cadastros";
}

<h2>Usuários Cadastrados</h2>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Endereço</th>
                <th>Ano de Nascimento</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.BirthYear)</td>
                    <td>
                        <a asp-action="Atualizar" asp-route-id="@item.PersonId" class="btn btn-info">Atualizar</a>
                        <a asp-action="Detalhes" asp-route-id="@item.PersonId" class="btn btn-warning">Detalhes</a>
                        <a asp-action="Excluir" asp-route-id="@item.PersonId" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>