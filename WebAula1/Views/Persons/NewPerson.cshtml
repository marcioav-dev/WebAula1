@model WebAula1.Models.Person
@{
    ViewData["Title"] = "Novo Cadastro";
}

<h2>Inserir novo Cadastro</h2>

<form asp-action="NewPerson" method="post">
    <div class="form-group">
        <label asp-for="Name" class="form-check-label">Nome</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address" class="form-check-label">Endereço</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BirthYear" class="form-check-label">Data de Nascimento</label>
        <input asp-for="BirthYear" class="form-control" />
    </div>

    <input type="submit" value="Salvar" class="btn" />
</form>

<a asp-action="Index" class="btn btn-link">Voltar</a>
